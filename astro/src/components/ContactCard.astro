const t = useTranslations(lang);
---
<div class="contact-card border-2 rounded border-white px-10 py-10 w-96 h-fit mx-auto flex flex-col items-center">
  <Image alt="Bild Time J Möller" src={tim} />
  <h1 class="text-white text-xl my-4">Tim Julian Möller</h1>
  <ul class="flex gap-4 mb-4">
    <li>
      <a href="#">
        <!-- <Fragment class="fill-white" set:html={Xing} /> -->
        <Xing class="fill-white stroke-white w-8 h-8" />
        </a>
    </li>
        <li>
          <a href="#">
            <LinkedIn class="fill-white w-8 h-8" />
          </a>
        </li>
        <li>
          <a href="#">
            <Twitter class="fill-white w-8 h-8" />
          </a>
        </li>
        <li>
          <a href="#">
            <Github class="fill-white w-8 h-8" />
          </a>
        </li>
      </a>
    </li>
  </ul>
  <button class="button px-5 py-2 text-white bg-blue-500 text-lg rounded"> {t("contact.button")} </button
  >
</div>
