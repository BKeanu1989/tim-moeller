---
interface Props {
  title: string;
}
import { getLangFromUrl } from "../i18n/utils";
import { ViewTransitions } from "astro:transitions";

import "../styles/index.css";

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- <meta http-equiv="refresh" content="0;url=/en/" /> -->

    <title>{title}</title>
    <!-- TODO: this is sadly not working rn -->
    <!-- <link href="/styles/output.css" rel="stylesheet" /> -->
    <!-- this is but, do we need it? -->
    <!-- aka why not just import in mainjs -->
    <!-- <link href="/output.css" rel="stylesheet" /> -->
    <ViewTransitions />
  </head>
  <body class="min-h-dvh bg-gradient-to-b from-c-neutral-900 to-c-neutral-800">
    <slot />
    <footer class="flex bg-slate-400 w-dvw h-fit"></footer>
  </body>
</html>
<style is:global>
  :root {
    --neutral-cool-grey-1: 210 25 7;
    --neutral-cool-grey-2: 210 12 15;
    --navbar-height: 50px;
    --navbar-offset: calc(-1 * var(--navbar-height));
  }
  @font-face {
    font-family: "Open Sans";
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url(/fonts/OpenSans-VariableFont_wdth,wght.ttf) format("truetype");
  }

  body {
    /* max-width: 100dvw;
    min-height: 100dvh; */
    height: 100%;
    /* overflow: hidden; */
  }
</style>
