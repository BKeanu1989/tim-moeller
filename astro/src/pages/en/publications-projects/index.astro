---
import NavSideBarLayout from "../../../layouts/NavSideBarLayout.astro";

import { getCollection } from "astro:content";
import Publication from "@components/Publication.astro";

const allPublications = await getCollection("publications");

const englishPublications = allPublications.filter((x) =>
  x.slug.includes("en/")
);
---

<NavSideBarLayout title="Publications">
  <main class="text-white">
    <h1 class="text-2xl text-center py-5">Publications</h1>
    <div class=" flex flex-wrap place-content-evenly gap-5">
      {
        englishPublications.map((x) => {
          return (
            <div class="single-publication rounded-sm w-2/5">
              <Publication class:list={"h-full"} input={x} />
            </div>
          );
        })
      }
    </div>
  </main>
</NavSideBarLayout>
