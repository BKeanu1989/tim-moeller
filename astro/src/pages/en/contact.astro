---
import ContactForm from "@components/ContactForm.astro";
import NavSideBarLayout from "src/layouts/NavSideBarLayout.astro";


---

<NavSideBarLayout title="Contact">
    <main class="max-w-6xl mx-auto px-4 py-12 min-h-dvh">
        <div class="h-full flex flex-col items-center justify-center">
            <!-- Contact Content -->
            <div class="w-full max-w-4xl">
                <div class="grid md:grid-cols-2 gap-12 items-center">
                    <!-- Left Side: Text Content -->
                    <div class="space-y-6">
                        <div class="space-y-4">
                            <h1 class="text-4xl font-light text-white">Let's Work Together</h1>
                            <p class="text-gray-300 leading-relaxed">
                                If you are interested in a collaboration in a scientific project, in my service as a lecturer, or any other inquiries, please contact me via email or through the contact form.
                            </p>
                        </div>
                        
                        <!-- Contact Information -->
                        <div class="space-y-4 pt-6 border-t border-gray-700/50">
                            <div class="flex items-center space-x-3 text-gray-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                                <a href="mailto:tim.julian.moeller@gmail.com" class="hover:text-white transition-colors">
                                    tim.julian.moeller@gmail.com
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Right Side: Contact Form -->
                    <div class="relative">
                        <div class="absolute inset-0 bg-cyan-500/10 blur-xl rounded-full"></div>
                        <div class="relative bg-gray-800/50 backdrop-blur-sm rounded-lg p-6 shadow-lg">
                            <ContactForm />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</NavSideBarLayout>

<style>
    main {
        background: radial-gradient(circle at top right, rgba(6, 182, 212, 0.05) 0%, transparent 60%);
    }
</style>