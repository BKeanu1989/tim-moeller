---
import Layout from '../../layouts/Layout.astro'
import IntroDeck from '../../components/IntroDeck.astro'
import ContactForm from '@components/ContactForm.astro'
import Footer from '@components/Footer.astro'
---

<Layout title="Welcome to Astro.">
	<main class="overflow-hidden">
		<IntroDeck />
		<article class="h-cdvh mx-auto flex w-3/4 flex-row">
			<div class="contact-form--intro flex-grow px-20">
				<h1 class="text-4xl">Work with me</h1>
				<p class="max-w-xs text-2xl">
					If you are interest in a collaboration in a scientific project, in my service as a
					lecturer, or any other inquires, please contact me via email at
					tim.julian.moeller@gmail.com or through my contact form.
				</p>
			</div>
			<div class="flex flex-col">
				<ContactForm
					class="bg-c-neutral-500 c-mx-auto mx-auto justify-center rounded-sm border p-5"
				/>
			</div>
		</article>
		<!--client load is not for astro components -->
		<!-- <IntroDeck client:load /> -->
		<Footer />
	</main>
</Layout>
